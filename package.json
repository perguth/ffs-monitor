{
  "name": "ffs-monitor",
  "version": "1.0.0",
  "description": "Monitor your freifunk devices.",
  "author": "Per Guth <mail@perguth.de>",
  "license": "MIT",
  "keywords": [
    "freifunk",
    "stuttgart",
    "monitoring"
  ],
  "main": "main.js",
  "browser": "index.js",
  "scripts": {
    "test": "standard",
    "start": "budo --live --host localhost index.js:bundle.js",
    "build": "mkdir -p build && browserify index.js -o build/bundle.js -t [babelify --presets [es2015]] && cp -r index.html node_modules build/ && touch build/.nojekyll",
    "node": "nodemon node.js"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "budo": "^10.0.4",
    "choo": "^6.4.1",
    "choo-log": "^7.2.1",
    "choo-persist": "^3.0.2",
    "express": "^4.16.2",
    "node-fetch": "^1.7.3",
    "nodemon": "^1.12.1"
  }
}
